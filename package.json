        "@vueuse/components": "^12.0.0",
        "@vueuse/core": "^12.0.0",
        "@wxt-dev/module-vue": "^1.0.2",
        "axios": "^1.1.2",
        "bulma": "0.9.4",
        "bulma-checkradio": "2.1.3",
        "cross-env": "^7.0.3",
        "crypto-js": "^4.2.0",
        "eslint-plugin-vue": "^9.30.0",
        "jsqr": "^1.4.0",
        "lucide-vue-next": "^0.474.0",
        "pinia": "^2.2.6",
        "pinia-plugin-persistedstate-2": "^2.0.28",
        "sass": "1.67",
        "typescript": "^5.7.3",
        "vue-i18n": "^10.0.5",
        "vue-router": "^4.5.0",
        "webext-bridge": "^6.0.1",
        "wxt": "^0.20.0"
    },
    "dependencies": {
        "vue": "^3.5.12"
    }
