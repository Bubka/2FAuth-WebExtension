{
    "{{chrome}}.manifest_version": 3,
    "{{firefox}}.manifest_version": 3,
    "name": "2FAuth",
    "description": "",
    "version": "0.0.0",
    "{{chrome}}.action": {
        "default_popup": "src/popup/index.html",
        "default_title": "2FAuth"
    },
    "{{firefox}}.browser_action": {
        "default_popup": "src/popup/index.html",
        "default_area": "navbar",
        "default_title": "2FAuth",
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "64": "icons/64.png"
        },
        "theme_icons": [
            {
                "light": "icons/16-black.png",
                "dark": "icons/16-white.png",
                "size": 16
            },
            {
                "light": "icons/32-black.png",
                "dark": "icons/32-white.png",
                "size": 32
            },
            {
                "light": "icons/64-black.png",
                "dark": "icons/64-white.png",
                "size": 64
            }
        ]
    },
    "background": {
        "type": "module",
        "{{chrome}}.service_worker": "src/background/serviceworker.js",
        "{{firefox}}.scripts": [
            "src/background/serviceworker.js"
        ],
        "{{firefox}}.persistent": false
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "clipboardWrite",
        "alarms",
        "idle",
        "tabs",
        "{{chrome}}.background"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}